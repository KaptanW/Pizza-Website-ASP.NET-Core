@page
@model razorpizerria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Kendi Pizzanı Yarat!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pb-5 pt-5 rounded-5 alert-light col-4 ">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Pizzana isim ver.."/>
        <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Domates Sosu" /> Domates Sosu
        <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Peynir" /> Peynir
        <br />
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni" />Peperoni
        <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mantar" />Mantar
        <br />
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Ton Balığı" />Ton Balığı
        <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Ananas" />Ananas
        <br />
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Salam" />Salam
        <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Sucuk" />Sucuk
        <br />
        <button class="btn btn-primary mt-1" type="submit">Sipariş Ver!</button>
    </form>
</div>