@page
@model razorpizerria.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Pizzalarımız</h1>
        <h4> Lütfen Pizzanızı seçiniz</h4>
        <p class="smallText">Sadece bir pizza seçiniz</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/css/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-items-center makeYourOwnText">
                            <h3 style="text-align:left;"> Kendi Pizzanı Yap </h3>
                            <p style="text-align:left;">Tercih ettiğin pizzanı yapabilirsin</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Pizzanı Hazırla</a>
                        </div>
                    </div>
                </div>
            </div>
                @foreach (var pizza in Model.fakePizzaDB)
            {

                var imagePath = "~/css/images/Pizzas/" + (pizza.ImageTitle+".png");
                <div class="col-4 mb-5">

                    <a class="pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice" asp-route-PizzaName="@pizza.PizzaName"><img src="@imagePath" class="w-100" asp-append-version="true" /></a>

                    <br />
                </div>
            }
          
        </div>
    </div>
</div>